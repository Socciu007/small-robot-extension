{
  "manifest_version": 3,
  "name": "Small Robot Crawl",
  "version": "1.0",
  "description": "Extension to automate login and form filling",
   "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://freightsmart.oocl.com/*"],
      "js": ["content.js"],
      "type": "module"
    }
  ]
}
